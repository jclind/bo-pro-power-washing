---
import Navbar from '../components/Layout/Navbar';
import Footer from '../components/Layout/Footer';

interface Props {
	title?: string;
	description?: string;
}
const { title = "Bo Pro Power Washing", description = "Your home's exterior is the first thing people noticeâ€”make it count! Bo Pro Power Washing offers professional cleaning services for driveways, decks, siding, and sidewalks in Cranberry Township and beyond. With a commitment to quality and customer satisfaction, we're here to make your property shine. Starting at just $150 per job!" } = Astro.props;
const siteName = "Bo Pro Power Washing"
---



<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />

		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:image" content="/images/og_image.webp" />
		<meta property="og:site_name" content={siteName} />

		<link rel="canonical" href={Astro.url.href} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" 
			rel="preload" as="style"
			onload="this.onload=null;this.rel='stylesheet'" />
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" 
				rel="stylesheet" />
		</noscript>
	</head>
	<body>
		<Navbar currentPath={Astro.url.pathname} client:load />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
